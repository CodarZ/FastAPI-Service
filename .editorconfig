# EditorConfig: https://editorconfig.org

# 顶层配置文件
root = true

# 所有文件的默认配置
[*]
indent_size = 2
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Python 文件
[*.py]
indent_size = 4
max_line_length = 120

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off
