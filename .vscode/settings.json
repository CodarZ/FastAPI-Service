{
  "workbench.editor.autoLockGroups": { "mainThreadWebview-simpleBrowser.view": false },

  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "pyproject.toml": "requirements.txt, uv.lock, .python-version",
    "ruff.toml": "cz.toml, .prettierrc.yaml, .prettierignore, .editorconfig, .pre-commit-config.yaml",
    "README.md": "README.*, LICENSE, CHANGELOG.md, CONTRIBUTING.md",
    "pytest.ini": ".pytest_cache, .coverage, htmlcov/, coverage.xml, .coveragerc, conftest.py",
    "alembic.ini": "alembic/",
    "Dockerfile": "Dockerfile.*, .dockerignore, docker-compose.yml, docker-compose.*.yml",
    "docker-compose.yml": "docker-compose.*.yml, .dockerignore"
  },

  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'FiraCode Nerd Font Mono', Consolas, 'Courier New', monospace",

  "editor.tabSize": 2,
  "editor.fontSize": 18,
  "editor.wordWrap": "on",
  "editor.hover.sticky": true,
  "editor.linkedEditing": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.autoClosingBrackets": "always",
  "editor.guides.bracketPairs": "active",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.fontFamily": "'JetBrains Mono', 'FiraCode Nerd Font', Consolas, 'Courier New', monospace",
  "editor.unicodeHighlight.allowedCharacters": {
    "：": true,
    "（": true,
    "）": true,
    "，": true,
    "。": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.ruff": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },

  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.json": "jsonc",
    "*rc": "jsonc",
    ".*ignore": "ignore",
    ".env*": "dotenv"
  },
  "files.exclude": {
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.venv": true,
    "**/venv": true,
    "**/*cache": true,
    "**/__pycache__": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.venv": true,
    "**/venv": true,
    "**/*cache": true,
    "**/__pycache__": true
  },

  "emmet.includeLanguages": {},

  "prettier.enable": true,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.endOfLine": "lf",

  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false
}
